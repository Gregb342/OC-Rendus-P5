@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}
<div class="container form-container col-md-3">

    <form id="account" method="post">
        <h1 class="p-5">ExpressVoitures</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="p-3">
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Adresse email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Se souvenir de moi ?
                        </label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-evenly align-items-center p-2">
                <button id="login-submit" type="submit" class="btn btn-warning btn-add-car">Se connecter</button>ou
                <a asp-page="./Register" class="btn btn-warning btn-add-car" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire</a>
            </div>
            <div class="p-4">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Mot de passé oublié ?</a> <br />
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer l'email de confirmation</a>
                </p>
            </div>        
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
