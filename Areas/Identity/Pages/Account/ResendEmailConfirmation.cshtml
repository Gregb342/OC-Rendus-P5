@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Renvoyer l'email de confirmation";
}

<div class="d-flex justify-content-center align-items-start" style="min-height: 100vh;">
    <div class="container form-container col-lg-4 col-md-6 col-12 mt-5">
        <form id="resend-email" method="post" class="shadow-lg p-4 bg-white rounded">
            <h1 class="text-center mb-4">ExpressVoitures</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" autocomplete="username" />
                    <label asp-for="Input.Email" class="form-label">Adresse email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-warning btn-add-car">Renvoyer l'email</button>
            </div>
            <div class="text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
