@model OC_P5.ViewModels.CarViewModel
@Html.ValidationSummary(true)

@{
    ViewData["Title"] = "Modifier une voiture";
}

<div class="container">
    <h2 class="text-center my-5">Modifier la voiture</h2>
    <p class="text-center text-muted">Tous les champs sont obligatoires</p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Label" class="form-label"></label>
                    <input asp-for="Label" class="form-control" />
                    <span asp-validation-for="Label" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VIN" class="form-label"></label>
                    <input asp-for="VIN" class="form-control" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="YearOfProductionId" class="form-label"></label>
                    <select asp-for="YearOfProductionId" class="form-select" asp-items="ViewBag.YearOfProductionId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CarBrandId" class="form-label"></label>
                    <select asp-for="CarBrandId" class="form-select" asp-items="ViewBag.CarBrandId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CarModelId" class="form-label"></label>
                    <select asp-for="CarModelId" class="form-select" asp-items="ViewBag.CarModelId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CarTrimId" class="form-label"></label>
                    <select asp-for="CarTrimId" class="form-select" asp-items="ViewBag.CarTrimId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="PurchaseDate" class="control-label"></label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PurchasePrice" class="control-label"></label>
                    <input asp-for="PurchasePrice" class="form-control" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>

                <hr />
                <p>Voulez-vous ajouter une réparation ?</p>

                <div class="form-group">
                    <label asp-for="RepairDate" class="control-label"></label>
                    <input asp-for="RepairDate" class="form-control" type="date" />
                    <span asp-validation-for="RepairDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RepairDescription" class="control-label"></label>
                    <input asp-for="RepairDescription" class="form-control" />
                    <span asp-validation-for="RepairDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RepairCost" class="control-label"></label>
                    <input asp-for="RepairCost" class="form-control" />
                    <span asp-validation-for="RepairCost" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Visual" class="form-label">Visuel</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-plus"></i></span>
                        <input type="file" class="form-control" id="Visual" />
                    </div>
                    <small class="text-muted">Ajoutez une image</small>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning btn-lg">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
