@model ExpressVoitures.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CarLabel" class="control-label"></label>
                <input asp-for="CarLabel" class="form-control" />
                <span asp-validation-for="CarLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.Pictures.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="Pictures[i].PicturePath" class="control-label">Picture @i</label>
                    <input asp-for="Pictures[i].PicturePath" class="form-control" />
                    <input type="hidden" asp-for="Pictures[i].Id" />
                    <span asp-validation-for="Pictures[i].PicturePath" class="text-danger"></span>
                </div>
            }
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
