@model ExpressVoitures.Models.Car

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarLabel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarLabel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dd>
            <h4>Pictures</h4>
            @foreach (var picture in Model.Pictures)
            {
                <div>
                    <img src="@Url.Content("~/uploads/" + picture.PicturePath)" alt="Car Image" style="width: 200px; height: auto;" />
                </div>
            }
        </dd>        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
